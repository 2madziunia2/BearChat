<section id="allPage">
    <img id="logo" src="/images/logos/bearchat2.png">
    <form id="home-page" action="#">
        <div>
            
              <script>
                
                function change(img){
                    img.value =img.src;
                    document.getElementById("wybrany").value=img.value;
                    img.style.outline="solid 5px #59342B";
                    img.style.pointerEvents="none";
                  }
              </script>

            <div id="loginPan">
                <h2>Witaj na czacie!</h2>
                <h3>Wybierz Misio-avatar & podaj Misio-Nazwę</h3>
                 {{#each pictures}} 
                    <img id="wybrany"  onclick="change(this)" src="/images/avatars/{{this}}" class="avatar2">
                {{/each}}
               <input id="login" class="form-control" type="text" >
                <button id="sub">Dołącz</button>
                <p id="empty"></p>
            </div>  
        
        </div>
    </form>
    
    <form id="chat-room" action="#">
      
        <div class="row">
            <div class="col-sm-3"><p id="napisUzytkownicy">Statusy</p>
                <div id="status-window">
                        <ul class="list-unstyled">
                            <li class="p-2 border-bottom">
                                    <div class="d-flex flex-row">
                                        <script  type="text/x-handlebars-template" id="activity-window">
                                                <div id="activ">
                                                    <img src="\{{ avatar }}" alt="avatar" class="avatar1">
                                                    <p class="fw-bold mb-0">\{{ login }}</p>
                                                    <p class="small">\{{ time }}</p>
                                                    <p class="small">\{{ status }}</p>
                                                </div>
                                                
                                        </script>
                                    </div>   
                            </li> 
                        </ul>
                    

                   
                </div>
              
            </div>
            <div class="col-sm-9">
                <div class="col-md-6 col-lg-7 col-xl-8"></div>
               
                    <div id="chat-window" >
                   
                        <div class="pt-3 pe-3" data-mdb-perfect-scrollbar="true" style="position: relative;">
                            <div class="d-flex flex-row justify-content-start"></div>
                                <script  type="text/x-handlebars-template" id="messages-window">
                                    <div>
                                        <img class="avatar1" src="\{{ avatar }}">
                                        <span class="fw-bold">\{{ login }}</span><span class="small me-3 mb-3 rounded-3 text-muted" class="time-line"> \{{ time }}</span>
                                        <p id="message-content"  class="small p-2 ms-3 mb-1 rounded-3", "message-line" >\{{ message }}</p>
                                        
                                    </div>
                                </script>
                            </div>
                        </div>
                   
                        <div >
                            <textarea id="message-text" placeholder="Twoja wiadomość..." class="form-control form-control-lg"></textarea>
                      
                            <button class="button-send">Wyslij</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>